<?xml version="1.0" encoding="UTF-8" ?>

<composite>
    <variables>
        <scan value="inlet_name" oid="1.3.6.1.4.1.13742.6.3.3.3.1.3.1.*">
            <match name="inlet_id"/>
        </scan>
    </variables>

    <data>
        <meta name="intf" source="inlet_name" />
        <meta name="alt_intf" source="inlet_id" />
        <value name="current" source="1.3.6.1.4.1.13742.6.5.2.3.1.4.1.inlet_id.1" />
        <value name="voltage" source="1.3.6.1.4.1.13742.6.5.2.3.1.4.1.inlet_id.4" />
        <value name="actpower" source="1.3.6.1.4.1.13742.6.5.2.3.1.4.1.inlet_id.5" />
        <value name="apppower" source="1.3.6.1.4.1.13742.6.5.2.3.1.4.1.inlet_id.6" />
        <value name="pf" source="1.3.6.1.4.1.13742.6.5.2.3.1.4.1.inlet_id.7" />
    </data>

    <conversions>
        <function definition='${} 1000 /'>
            <data name="current" />
        </function>

        <replace this='${}' with='Inlet ${}'>
            <data name="alt_intf" />
        </replace>

        <function definition='"" eq "${alt_intf}" "${}" ifelse'>
            <data name="intf" />
        </function>

        <drop>
            <data name="alt_intf" />
        </drop>
    </conversions>
</composite>
